<!DOCTYPE html>
<html>
  <head>
    <title>TaskList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="all">
  <header class="titlemain">
    <h1>Task List</h1>
    <nav class="mainnav">
      <ul class="navtitles">
        <li>
          <%= link_to 'Full Task List', tasks_path %>
        </li>
        <li>
          <%= link_to 'Add a Task', new_task_path %>
        </li>
      </ul>
    </nav>
  </header>
  <main class="content">
    <%= yield %>
  </main>
  </div>
  <footer>
  <p>Like and subscribe.</p>
  </footer>
  </body>
</html>
