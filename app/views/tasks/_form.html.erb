<%= form_with model: @task, class: '_form__container' do |f| %>
  <p class="_form_instruction">Please provide the following information to <%= action_name %> your task to our database:</p>

  <div class="_form-text-container">
    <div class="_form">
      <%= f.label :name, class: "_form__label" %>
      <%= f.text_field :name, class: "_form__text_field" %>
    </div>

    <div class="_form">
      <%= f.label :description, class: "_form__label" %>
      <%= f.text_area :description, class: "_form__text_area" %>
    </div>
  </div>

  <%= f.submit action_name, class: "_form__task-btn" %>
<% end %>