
<%= form_with model: @task, class: 'forn-task' do |f| %>

  <p>Please provide the following information to add to our database:</p>
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :description %>
    <%= f.text_field :description%>

    <%= f.label :completed_at %>
    <%= f.text_field :completed_at%>

    <%= f.submit action_name , class:"task-button"%>
<% end %>