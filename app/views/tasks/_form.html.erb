<%= form_with model: @task, class: 'create-form' do |f| %>
<p>What task would you like to update?</p>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div>
  <%= f.submit action_name, class: "task-button"%>
</div>
<% end %>