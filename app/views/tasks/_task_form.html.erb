<%= form_with model: @task, class: 'create-task-form' do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :placeholder => "name" %>

  <%= f.label :description %>
  <%= f.text_field :description, :placeholder => "description" %>

  <% if @task.completed_at %>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at, :placeholder => "completed at" %>
  <% end %>

  <%= f.submit "Save Task", class: "save-task-button" %>
<% end %>