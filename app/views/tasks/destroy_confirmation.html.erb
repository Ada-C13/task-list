<%= form_with model: @task, class: 'destroy-task' do |f| %>
 <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>
 <p>Are you sure you want to delete?</p>
 <button><%= link_to "No", tasks_path %></button>
 <button><%= link_to "Yes, delete", destroy_task_path(@task.id), method: :delete %></button>
<% end %>