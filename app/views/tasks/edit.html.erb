<h1>Edit Task: <%= @task.name %></h1>
<%= form_with model: @task, class: "edit-form" do |f| %>
<p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  
  <%= f.submit "Edit", class: "edit-button"%>
</p>
<% end %>
