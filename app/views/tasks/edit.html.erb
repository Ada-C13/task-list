<h2>Edit Task</h2>

<%= form_with model: @task do |f| %>
	<div class="edit--form">
		<section>
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</section>
		<section>
			<%= f.label :description %><br>
			<%= f.text_field :description %>
		</section>
		<section>
			<%= f.submit 'Edit task' %>
		</section>
	</div>
<% end %>