<h2>edit task</h2>
<%= form_with model: @task do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%if @task.completed%>
    <%= f.label :completed_at%>
    <%= f.datetime_field :completed_at%>
  <%end%>

  <%= f.submit "update task" %>
<%end%>