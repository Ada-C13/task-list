<div class='edit'>
  <%= form_with model: @task do |f| %>
    <p>Please provide the following information <br>to edit your task.</p>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <%= f.submit%>
  <% end %>
</div>