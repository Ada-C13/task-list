<%= form_with model: @task do |f| %>
  <p>Edit task: </p>

  <div>
   <%= f.label :name %>
   <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>
  </div>

  <%= f.submit "Update task", class: 'update-task-button' %>

<% end %>