<h4>Edit Task</h4>
<% current_task = Task.find_by(id: params[:id]) %>
<p><em>~ currently editing "<%= current_task.name %>"</em> ~</p>
<div class="edit-form">
  <%= form_with model: @task do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description%>
  </div>
  <div>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at%>
  </div>
    <%= f.submit "Update", class: "button" %>
  <% end %>
</div>