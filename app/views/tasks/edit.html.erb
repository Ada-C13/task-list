<h4>Edit Task</h4>

<div class="edit-form">
  <%= form_with model: @task do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description%>
  </div>
  <div>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at%>
  </div>
    <%= f.submit "Update", class: "button" %>
  <% end %>
</div>