<%= form_with model: @task, class: 'task_form' do |f| %>
<p> Edit your Task</p>
    <div>
        <%= f.label :name%>
        <%= f.text_field :name%>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div>
        <%= f.label :completed_at %>
        <%= f.text_area :completed_at %>
    </div>
    <%= f.submit "Edit This Task" %>
<% end %>