<h2>Edit a task here</h2>

<%=  form_with model: @task do |f| %>
  <p>Fill in the following fields:</p>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :completed_at %>
      <%= f.text_field :completed_at %>
    </div>
    <%= f.submit "Save changes" %>
<% end %> 

