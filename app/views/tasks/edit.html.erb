<h2>Editing your task</h2>
<%= form_with model: @task, class: "create-task" do |f| %>
  <p>Update the details:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>

  <%= f.submit "Update task", class: "task-button" %>
<% end %>