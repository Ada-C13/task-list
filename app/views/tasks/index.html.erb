<h2>Welcome to my Tasks Page</h2>
  <% if @tasks.length > 0 %>
    <ul>
      <% @tasks.each do |task| %>
        <li>
          <% id = task[:id]%>
          <%= link_to task.name, task_path(id) %> --  <%=task[:description]%>
        </li>
      <%end%>
    </ul>
  <%else%>
    <h3>No Tasks Found</h3>
  <%end%>