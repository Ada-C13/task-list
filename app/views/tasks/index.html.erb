<body>
<h2 class="title">I am a task.</h2>

  <% if @tasks.length > 0 %>
    <ul>
      <% @tasks.each do |task|%>
        <li>
          <input type="checkbox" class="checkbox">
          <span class="checkmark"></span>
          <%= task[:title]%> by <%= task[:author] %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <h3>No tasks in the system!</h3>
  <% end %>

</body>