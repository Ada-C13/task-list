<h3>YOUR TASKS</h3>

<% if @tasks.length > 0 %>
  <ol>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task[:name], task_path(task) %>
        <%= button_to "Edit", edit_task_path(task[:id]), method: :get %>
      </li>
    <% end %>
  </ol>
<% else %>
  <h3>No tasks in the system!</h3>
<% end %>

<nav>
  <%= button_to "Add Task", new_task_path, method: :get %>
</nav>