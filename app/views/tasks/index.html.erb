<div class = "index">
<h2>YOUR TASKS</h2>
<%if @tasks.length > 0 %>
  <ol> 
    <% @tasks.each do |task| %>
      <li> 
        <div  class = <%=task.completed_at ? 'complete' : 'uncomplete'%>>
          <%= link_to task.name, task_path(task)%>
        </div> 
        <%= task.completed_at ? link_to("Unmark Complete", task_complete_path(task), method: :patch) : link_to("Mark Complete", task_complete_path(task), method: :patch)%> |
        <%= link_to "Edit", edit_task_path(task) %> |
        <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete #{task.name}?"} %>
      </li>
    <% end %>
  </ol>
<% else %>
  <h2>No tasks in the system!</h2>
<% end %>
</div>