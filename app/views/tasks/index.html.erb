<h1>Tasks</h1>


<% if @tasks.length > 0 %>
    <ul>  
        <% @tasks.each do |task| %>
            <li> <%= link_to task.name, task_path(task.id) %> </li>
            <p><%= task.description %> needs to be completed by <%= task.completed_at %></p>
        <% end %>
    </ul>
    
    <p><%= link_to "Add a Task", new_task_path %></p>
<% else %>
    <h3> No tasks in the system! </h3>
<% end %>