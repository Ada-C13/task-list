<h4>Your tasks</h4>

<% if @tasks.length > 0 %>
  <ol>
    <% @tasks.each do |task|  %>
      <li>
        <header><strong><%= task.name %></strong></header>
        <%= task.description %>
        <%=task.completed_at %>
        <button><a href='/tasks/<%= task.id %>'>Show</a></button>
      </li>
    <% end %>
  </ol>
<% else %>
  <h3>No tasks for today!</h3>
<% end %>

