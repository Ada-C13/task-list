<h2>Task</h2>

<% if @tasks.length > 0 %>
<ul>
<% i = 0 %>
  <% @tasks.each do |task| %>
  <li>
 <%= i += 1 %>). Task: 
<%= link_to(task.name.upcase, task_path(task.id)) %></li> 
<%= link_to "Edit", edit_task_path(task.id) %> |
<%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
</ul>
<% else %>
<h3>No Task<h3>
<% end %>

