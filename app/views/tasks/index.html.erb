<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <p><h2><%= task.name %></h2></p>
      <p><%= task.description %></p>
      <p><%= task.completed_at %></p>
      <%= link_to "Edit Task", edit_task_path(task.id) %> <%= link_to "Delete task", task_path(task), method: :delete, data: {confirm: "Are you sure you would like to delete this task?"} %>
    </li>
  <% end %>
</ul>
<%= link_to "Add new task", new_task_path %>