<h2>Tasks for today</h2>

<% if @tasks.length > 0 %>
  <ul>
    <% @tasks.each do |task| %>
      <li> 
        Task: <%= link_to task.name, task_path(task.id) %> 
        Description: <%= task.description %> 
        Completed: <%= task.completed_at %>
        <%= link_to "Edit", edit_task_path(task.id) %>
        <%= link_to "Delete", destroy_confirm_path(task.id) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h3>No tasks for today!</h3>
<% end %>