<h3>Tasks</h3>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= task.id %> - 
      <%= link_to task.name, task_path(task) %> : 
      <%= task.description %>
      <%= task.completed_at.nil? ?
        "(not completed)" :
        "(completed at " + task.completed_at.to_s + ")"
      %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path, class: "link" %>