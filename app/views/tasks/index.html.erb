<div class='tasks'>
  <h2>Tasks for today</h2>

  <% if @tasks.length > 0 %>
    <ul class='wrapper'>
      <% @tasks.each do |task| %>
        <li class = 'task'> 
          <%= link_to task.name, task_path(task.id) %> 
          - <%= task.description %> 
          - <%= task.completed_at %>
          <%= link_to "Edit | ", edit_task_path(task.id) %>
          <%= link_to "Delete | ", destroy_task_path(task.id), method: :delete, 
          data: { confirm: "Are you sure you want to delete this task?" } %>
          <%= link_to "Mark as Complete", complete_task_path(task.id), method: :post %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <h3>No tasks for today!</h3>
  <% end %>
</div>