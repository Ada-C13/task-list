<h1>Tasks</h1>
<button><%= link_to "add new task", new_task_path %></button>
<section class="tasks">
  <% @tasks.each do |task|  %>
    <div class="task">
      <%= link_to "#{task.id}. #{task.name}", task_path(task), class: "#{task.completed_at.empty? ? 'undone' : 'done'}" %><span> | </span>
      <%= link_to "#{task.completed_at.empty? ? 'mark' : 'undo'} complete", toggle_task_path(task), method: :patch, data: { completed_at: "test"} %>
    </div>
  <% end %>
</section>

