<h1>YOUR TASKS</h1>
<ul>

  <% @tasks.each do |task| %>
    <li><%=link_to task.name, task_path(task) %>: <%= task.description %></li>
    <%= link_to "Mark Complete", task_path(task) ,method: :markcomplete %>
    <%= link_to "Edit", edit_task_path(task) %> | <%= button_to "Delete", task_path(task), method: :delete , data:{confirm: 'Are you sure?'}%>

  <% end %> 
  
</ul>

