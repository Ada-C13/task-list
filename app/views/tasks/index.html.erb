<%= link_to "Add Task", new_task_path %>

<h4>Your tasks</h4>
<% if @tasks.length > 0 %>
  <ol>
    <% @tasks.each do |task|  %>
      <li>
        <header><strong><%= link_to(task.name, task_path(task.id) ) %></strong></header>
        <%= task.description %>
        <%= task.completed_at %>
        <p><%= link_to "Delete Task", task_path(task), method:  :delete, data: {confirm: "Are you sure you  want to delete this task?"} %></p>
      </li>
    <% end %>
  </ol>
<% else %>
  <h3>No tasks for today!</h3>
<% end %>

