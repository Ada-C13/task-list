<h1>YOUR TASKS</h1>
<ul>

  <% @tasks.each do |task| %>
    <% if task.completed_at.nil? %>

      <li><%=link_to task.name, task_path(task) %>: <%= task.description %></li>
      <%= link_to "Mark Complete", task_path(task, 
        task:{
          completed_at: Time.now,
          name: task.name,
          description: task.description
        }), 
        method: :patch 
      %>
      <%= link_to "Edit", edit_task_path(task) %> | <%= button_to "Delete", task_path(task), method: :delete , data:{confirm: 'Are you sure?'}%>
    
    <% else  %>
      
      <li><%=link_to task.name, task_path(task), class:"completed" %>: <%= task.description %></li>
      <%= link_to "Mark Complete", task_path(task) %>
      <%= link_to "Edit", edit_task_path(task) %> | <%= button_to "Delete", task_path(task), method: :delete , data:{confirm: 'Are you sure?'}%>
   
    <% end %> 
  <% end %> 
  
</ul>

