<h1>All Tasks</h1>
<ul>
	<% @tasks.each do |task| %>
		<li>
			<%= link_to task.name, task_path(task) %><br>
			
			<% if task.completed_at == "" %>
				<%= link_to 'MARK AS COMPLETE', complete_task_path(task), method: :patch %>
			<% else %>
				<%= link_to 'UNMARK AS COMPLETE', complete_task_path(task), method: :patch %>
			<% end %>
			| 
			<%= link_to 'EDIT', edit_task_path(task) %> |
			<%= link_to 'DELETE', task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
		</li>
	<% end %>
</ul>

