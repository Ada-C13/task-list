<h1>Nataliya's TODOs</h1>

<button><%= link_to "Add Task", new_task_path %></button>

<% if @tasks.length > 0 %>
  <ul>
    <% @tasks.each do |task|  %>
      <li>
        <h4><%= link_to task.name, task_path(task.id) %></h4>
        <p><%= task.description %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <h3>All tasks completed!</h3>
<% end %>