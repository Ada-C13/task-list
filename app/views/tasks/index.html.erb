<h1>Task List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Completed</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.completed_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul>
  <li><a href="<%= new_task_path %>">Create a new task</a></li>
</ul>