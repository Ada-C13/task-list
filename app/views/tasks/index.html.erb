
<h2>Tasks</h2>

<% if @tasks.length > 0 %>
  <ul>
    <% @tasks.each do |task|%>
      <li>
        <%= task.name %> description: <%= task.description %>  Completed_at: <%= task.completed_at %> 
        <%= link_to "Edit", edit_task_path(task) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h4>No task for you today!! Yeii!! </h4>
<% end %>