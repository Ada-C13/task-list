<%# Display the tasks from the controller action%>
<ul class="tasks">
  --------
  <% @tasks.each do |task| %>
  <li class="task"><%=link_to task.name, task_path(task.id) %>
  <%= button_to "Mark Complete", task_path(task.id), method: :patch %>      -      <%= link_to "edit", edit_task_path(task.id) %>  -  <%= link_to "delete", task_path(task.id), method: :delete %><br>--------</li>
  <% end %>
</ul>