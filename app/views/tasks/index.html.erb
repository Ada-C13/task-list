


<div class="index"> 
  <h4> Things you need to complete:  </h4>
  <p><i> *click task to edit* </i><p> 

  <ol>
    <% @tasks.each do |task| %>
      <li>
      <%= link_to task.name.capitalize(), task_path(task) %> 

      <% if task.completed_at %>

        
        completed

        <%= button_to "Edit Task", edit_task_path(task), method: :get %>

        <%= button_to "Delete", task, method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>

      <% else%>
      
        <%= button_to "Mark Complete", mark_complete_path(task), method: :patch %>

        <%= button_to "Edit Task", edit_task_path(task), method: :get %>

        <%= button_to "Delete", task, method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>

      <% end %>


      </li>
    <% end %>

  </ol>

</div>






