<header>
  <h1>Task List</h1>
</header>

<section class="tasks">
  <div class="tasks_left">
    <%= link_to "Add new task", new_task_path, class: "task-button"%>
    <%= link_to "All tasks", tasks_path, class: "task-button"%>
  </div>
  <div class="tasks_right">
    <h2>Add a new task</h2>
    <%= form_with model: @task do |f|%>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <%= f.submit "Add a task"%>
    <% end %>
  </div>
</section>