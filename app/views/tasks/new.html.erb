<%# app/views/tasks/new.html.erb%>

<h3>Create New Task</h3>
<p>&#128204 Please fill in this form to create a new task!</p>

<%= form_with model:@task do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>
  </div>

  <%= f.submit %>

<% end %>