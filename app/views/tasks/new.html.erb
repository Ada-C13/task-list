<%= form_with model: @task, class:  'new-task-form' do |f| %>
  <p>Please provide the following information to create a new task:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
    <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit "Add Task" %>
<% end %>