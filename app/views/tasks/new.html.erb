<%= form_with model: @task, class:'task-form' do |f| %>
  <p>Please provide the following information to save a new task:</p>
  <div>
    <%= f.label :name%>
    <%= f.text_field :name %>
  </div>
    <div>
    <%= f.label :description%>
    <%= f.text_area :description %>
  </div>
  <%= f.submit "Add a task"%>
<% end %>
