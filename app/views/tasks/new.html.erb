<h4>Create new task </h4>
<div class="new-form">
  <%= form_with model: @task do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
  <%= f.submit "Create New", class: "button"%>
  </div>
  <% end %>
</div>