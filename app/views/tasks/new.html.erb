<h1>New Task</h1>
<%= form_with model: @task, class: "task-form" do |f| %>
<p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  
  <%= f.submit "Create", class: "task-button"%>
</p>
<% end%>