
<%= form_with model: @task, class: "task-form" do |f| %>
  <p>Please provide the following information to save your book to our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Add a task", class: "task-button" %>
 
<% end %>