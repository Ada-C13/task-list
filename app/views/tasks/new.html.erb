<%= form_with model: @task, class: 'task-form' do |f| %>
  <p>Provide the following info: </p>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>
  </div>

  <%= f.submit "Save Task", class: 'task-button' %>

<% end %>