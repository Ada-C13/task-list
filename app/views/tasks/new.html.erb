<h1>New task form</h1>

<%# Form bilder objet %>
<%= form_with model: @task, class: 'task_form' do |f| %>

  <p>Please provide the following information to save your new task to our database:</p>
  <div>  
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
    <div> 
    <%= f.label :description %>
    <%= f.text_field :description%>
  </div>

  <div>  
    <%= f.label :completed_at %>
    <%= f.text_area :completed_at%>
  </div>
  <%= f.submit "Add a task!"%>
<% end %>