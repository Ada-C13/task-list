<%# https://github.com/Ada-Developers-Academy/textbook-curriculum/blob/master/08-rails/partial-views.md %>

<h2>New Page</h2>


<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to save your task to our database:</p>


  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>