

<ul>
  <% if @task.errors %>
    <% @task.errors.each do |name,message| %>
    <li>
    <%= name %>
    <%=   message %>
    </li>
    <% end %>
  <% end %> 
</ul>


<%= form_with model:@task do |f| %>
  
  <p>Please add new task:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit "Add Task" %>

<% end %>

