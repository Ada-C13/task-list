<h2> New Task Form </h2>


<%= form_with model: @task, class: 'task-form' do |f| %> 
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %> 
    
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
 
  <%= f.submit "add task" %>
  
<% end %>

