<h2>Add new Task</h2>
<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to save your task to a database:</p>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

  <%= f.submit "Save Task", class: "save-button" %>
<% end %> 