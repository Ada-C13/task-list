<%# in app/views/new.html.erb %>

<%= form_with model: @task, class: 'create-book' do |f| %>
<p>Please provide task information to save to our database:</p>
 <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
      <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
      <div>
        <%= f.label :completed_at %>
        <%= f.text_field :completed_at %>
    </div>
    <%= f.submit "Add a task!"%>
<% end %>