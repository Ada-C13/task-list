 <p>Please provide the following information to save your book to our database:</p>

 <%= f.label :name %>
 <%= f.text_field :name %>

 <%= f.label :description %>
 <%= f.text_field :description%>

 <%= f.label :created_at%>
 <%= f.text_field :created_at%>
 <%= f.submit "Save Task", class: "task-button" %>
<% end %>