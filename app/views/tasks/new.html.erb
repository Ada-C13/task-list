<%= form_with model: @task, class: "create-book" do |f|%>
 <p>Please provide the following information to create new task:</p>

 <%= f.label :name %>
 <%= f.text_field :name , placeholder: "Task Name" %>

 <%= f.label :description %>
 <%= f.text_field :description, placeholder: "Description"%>

 <%= f.label :created_at%>
 <%= f.text_field :created_at, placeholder: "Created_at"%>
 <%= f.submit "Save Task", class: "task-button" %>
<% end %>