<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Enter the following to save task:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>


  <%= f.submit "Save Task", class: "task-button" %>

<% end %>

<p><%= link_to "Back to all tasks", tasks_path %></p> 