<h2>New Task Page</h2>
<%= form_with model: @task, class: 'task-form' do |f| %>
  <p>Please fill out this form to add a task</p>
  <div>
    <%= f.label :name%>
    <%= f.text_field :name%>
  </div>
  <div>
    <%= f.label :description%>
    <%= f.text_area :description%>
  </div>
  <%= f.submit "Add Task", class: 'task-button'%>
<%end%>


