<div>
  <header>
    <h4><%= @task.name %></h4>
  </header>
  <p><%= @task.description %></p>
  <% if @task.completed_at %>
    <p><strong>Completed</strong>: <%= @task.completed_at %></p>
  <% end %>
  <p>
    <%= link_to "Edit", edit_task_path(@task.id)%> | 
    <% if @task.completed_at %>
      <%= link_to "Mark incomplete", toggle_complete_path(@task.id), method: :patch %>  
    <% else %>
      <%= link_to "Mark complete", toggle_complete_path(@task.id), method: :patch %> 
    <% end%> | 
    <%= link_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure?"} %> 
  </p>
</div>
