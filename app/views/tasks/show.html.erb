<h2><%=@task.name%></h2>
<main>
  <p><%= @task.description%></p>
  <%if @task.completed%>
    <p>completed at: <%= @task.completed_at %> </p>
  <%end%>
  <%= link_to "edit", edit_task_path(@task)%>
  <span>/</span>
  <%= link_to "delete", delete_task_path(@task), method: :delete%>
  <br>
  <br>
  <%= link_to "back to all tasks", tasks_path %>
</main>