<h3>Task Details</h3>
<ul>
  <li>Id: <%= @task.id %></li>
  <li>Name: <%= @task.name %></li>
  <li>Description: <%= @task.description %></li>
  <li>Completed: <%= @task.completed_at.nil? ?
    "not completed" : @task.completed_at.strftime("%D") %></li>
</ul>

<h3>Select an action</h3>
<%= button_to "Edit", edit_task_path(@task),
    method: "get", class: "button"
%>
<% if @task.completed_at.nil? %>
  <%= button_to "Complete", complete_task_path(@task),
      method: "patch", class: "button"
  %>
<% else %>
  <%= button_to "Uncomplete", uncomplete_task_path(@task),
      method: "patch", class: "button"
  %>
<% end %>
<%= button_to "Delete", task_path(@task),
    method: :delete, class: "button",
    data: {confirm: "Are you sure?"}
%>
<%= button_to "Return to task list", tasks_path,
    method: "get", class: "button"
%>
