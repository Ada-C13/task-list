<h3>Task Details</h3>
<ul>
<li>Id: <%= @task.id %></li>
<li>Name: <%= @task.name %></li>
<li>Description: <%= @task.description %></li>
<li>Completed: <%= @task.completed_at.nil? ?
  "not completed" : @task.completed_at %></li>
</ul>
<h3>Select an action</h3>
<%= button_to "Edit", edit_task_path(@task),
    method: "get"
%>
<%= button_to "Complete", task_path(@task) + "/complete",
    method: "patch"
%>
<%= button_to "Delete", task_path(@task),
    method: :delete,
    data: {confirm: "Are you sure?"}
%>
<%= button_to "Return to task list", tasks_path, method: "get" %>
