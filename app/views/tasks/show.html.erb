<section class="task-container single-task--show">

	<section class="task-container--task">
		<h2><%= @task.name %></h2>
		<%= @task.description %><br>
	</section>

	<nav class="options">
		<%= link_to 'Edit', edit_task_path(@task) %><br>
		<%= link_to 'Delete', task_path(@task), method: :delete, data: {confirm: "Are you sure?"} %>
		<%= link_to 'Back to all tasks', tasks_path %>
	</nav>
</section>