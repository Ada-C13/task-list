<h2><%= @task[:name]%></h2>
<h4><%= @task[:description]%></h4>
<div>
  <% id = @task[:id]%>
  <%= link_to "Edit Task", edit_task_path(id)%> |
  <%= link_to "Delete Task", task_path(id), method: :delete, data: {confirm: "Are you sure you want to delete this task?"}%> |
  <% if @task[:completed_at]%>
    <span>Completed</span>
  <% else %>
    <%= link_to "Mark Complete", mark_complete_path(id), method: :patch, data: {confirm: "Did you really do this or are you just pretending?"}%>
  <% end %>
</div>
