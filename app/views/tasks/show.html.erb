<h2><%= @task.name %></h2>
<h3><%= @task.description %></h3>
<h4><%= @task.completed_at %> </h4>

<div>
<%= link_to "Edit", edit_task_path(@task) %> <br>
<%= link_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure you want to delete this task"}%>

</div>


<p><%= link_to "Return to list of tasks", tasks_path %></p> 